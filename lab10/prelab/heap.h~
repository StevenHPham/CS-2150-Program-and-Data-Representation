#ifndef HEAP_H
#define HEAP_H

#include <vector>
using namespace std;

class heap {
public:
    heap();
    heap(vector<int> vec);
    ~heap();

    void insert(int x);
    int findMin();
    int deleteMin();
    unsigned int size();
    void makeEmpty();
    bool isEmpty();
    void print();

private:
    vector<int> hea;
    unsigned int heap_size;

    void percolateUp(int hole);
    void percolateDown(int hole);
};

#endif
